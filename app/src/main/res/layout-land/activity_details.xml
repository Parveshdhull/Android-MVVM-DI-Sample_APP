<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.parvesh.pixasearch.ui.DetailsActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/activity_details_image_view"
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/pixo_search_large_image"
            android:src="@drawable/ic_logo_square"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="bottom"
    android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium" />


        <TextView
            android:id="@+id/item_activity_main_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.userName}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.likesCount}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.favoritesCount}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.commentsCount}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{data.tags}"/>

    </LinearLayout>
    </LinearLayout>

</layout>